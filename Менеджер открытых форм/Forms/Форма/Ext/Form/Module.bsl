//
Функция СтрокаВерногоФормата(Строка)
		
	СтруктураДляПроверки = Новый Структура;
	
	Попытка
		
		СтруктураДляПроверки.Вставить(Строка);
		СтрокаВерногоФормата = Истина;
		
	Исключение
		
		СтрокаВерногоФормата = Ложь;
		
	КонецПопытки;
	
	Возврат СтрокаВерногоФормата;
	
